/*重置浏览器样式*/
html, body, div, span, applet, object, iframe,h1, h2, h3, h4, h5, h6, p, blockquote, pre,a, abbr, acronym, address, big, cite, code,
del, dfn, em, font, img, ins, kbd, q, s, samp,small, strike, strong, sub, sup, tt, var,b, u, i,center,dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,table, caption, tbody, tfoot, thead, tr, th, td {margin: 0;padding: 0;border: 0;outline: 0;font-size: 100%;vertical-align: baseline;background: transparent;}
body {line-height: 1;}
ol, ul {list-style: none;}
blockquote, q {quotes: none;}
blockquote:before, blockquote:after,
q:before, q:after {content: '';content: none;}
:focus {outline: 0;}
ins {text-decoration: none;}
del {	text-decoration: line-through;}
table {border-collapse: collapse;border-spacing: 0;}
html,body{width: 100%;height: 100%;}

//页面样式
setFrame(wh,ht)
	body
		font-family "微软雅黑"
		font-size 62.5% * (16px / ht)
	.frame
		width wh
		height ht
		position absolute;
		left 50%
		top 50%
		margin-left -(wh / 2)
		margin-top -(ht / 2)
	.frame .logo
		width 38%
	.frame .form
		width wh
		padding-top 10.8%
		padding-bottom 12.3%
		height ht * 0.569
		background rgba(255,255,255,0.5)
		border-radius 2.77%
		
.container
	width 100%
	height 100%
	background url(./imgs/bg.jpg) no-repeat
	background-size cover
	position relative
	left 0
	top 0
	overflow hidden
	
.frame .logo
	margin 0 auto
	display block
	margin-bottom 4.2%
.frame fieldset
	width 81%
	height 12.9%
	line-height 12.9%
	margin-bottom 5.4%
	margin-left auto
	margin-right auto
	position relative
	left 0
	top 0
.frame label
	display block
	height 24px
	line-height 24px
	position absolute
	left 0
	top 100%
.frame input
	width 100%
	height 100%
	// line-height 100%
	text-indent 10px
	border-radius 5px
	border none
	background #fff
	font-size 2.2em
	padding 0
.frame .validation-code-frame
	margin-bottom 0
.frame .valid-code-input
	width 30.9%
	vertical-align middle
	margin-right 0.8%
.frame .valid-code-picture
	width 24.7%
	margin-left 0.8%
	vertical-align middle
	margin-right:0.8%
.frame .button-frame
	margin-bottom 0
	margin-top 14.7%
	height 14.7%
	line-height 14.7%
	position relative
	left 0
	top 0
.frame button
	width 100%
	height 100%
	line-height 100%
	text-align center
	background:#00AF00
	border none
	border-radius 5px
	color #fff
	font-size 3.0em
	cursor pointer
.frame .error
	color #ff0000
	font-size 1.4em
.frame .error-tip
	width 100%
	height 7.2%
	line-height 7.2%
	text-align center
	color #ff0000
	position absolute
	left 0
	top -36%

normal_width = 722px
normal_height = 692px
	
setFrame(normal_width * 0.533,normal_height * 0.533)
/* 超小屏幕（手机，小于 768px） 53.3*/
/* 没有任何媒体查询相关的代码，因为这在 Bootstrap 中是默认的（还记得 Bootstrap 是移动设备优先的吗？） */

/* 小屏幕（平板，大于等于 768px） 64*/
@media (min-width:768px)
	setFrame(normal_width * 0.64,normal_height * 0.64)
/* 中等屏幕（桌面显示器，大于等于 992px） 82.7*/
@media (min-width:992px)
	setFrame(normal_width * 0.827,normal_height * 0.827)
/* 大屏幕（大桌面显示器，大于等于 1200px） */
@media (min-width:1200px)
	setFrame(normal_width * 1,normal_height * 1)
	